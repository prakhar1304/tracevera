{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,


    /* linting options */
    "strict": false, // Disable strict mode (reduces TS2339 errors)
    "noUnusedLocals": false, // Allow unused imports/variables
    "noUnusedParameters": false
 
  },
  "include": ["vite.config.ts"]
}
